{
  "name": "talk2notes",
  "version": "2.8.0",
  "description": "Open-source multilingual web app that converts audio/video lectures into structured notes using AI with markdown formatting",
  "author": "Talk2Notes Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/taufiqelrahman/talk2notes.git"
  },
  "keywords": [
    "transcription",
    "ai",
    "lecture-notes",
    "openai",
    "groq",
    "nextjs",
    "education",
    "bilingual",
    "indonesian",
    "markdown",
    "islamic-content"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:debug": "playwright test --debug",
    "check:ffmpeg": "bash scripts/check-ffmpeg.sh",
    "find:ffmpeg": "bash scripts/find-ffmpeg.sh",
    "deploy:production": "bash deploy-fly.sh",
    "deploy:fly": "flyctl deploy"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2",
    "formidable": "^3.5.1",
    "next": "^15.0.0",
    "openai": "^4.28.0",
    "p-retry": "^7.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-starry-night": "^2.2.0",
    "remark-gfm": "^4.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/formidable": "^3.4.5",
    "@types/node": "^20.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}
