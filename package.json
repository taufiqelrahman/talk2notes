{
  "name": "talk2notes",
  "version": "2.2.0",
  "description": "Open-source web application that converts audio/video lectures into structured notes using AI",
  "author": "Talk2Notes Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/taufiqelrahman/talk2notes.git"
  },
  "keywords": [
    "transcription",
    "ai",
    "lecture-notes",
    "openai",
    "nextjs",
    "education"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "check:ffmpeg": "bash scripts/check-ffmpeg.sh",
    "find:ffmpeg": "bash scripts/find-ffmpeg.sh"
  },
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2",
    "formidable": "^3.5.1",
    "next": "^15.0.0",
    "openai": "^4.28.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/formidable": "^3.4.5",
    "@types/node": "^20.11.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}
